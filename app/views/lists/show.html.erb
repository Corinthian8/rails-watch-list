<h1><%= @list.name %></h1>

<h3>Bookmarks:</h3>
<% if @list.bookmarks.any? %>
  <ul>
    <% @list.bookmarks.each do |bookmark| %>
      <li>
        <strong><%= bookmark.movie.title %></strong> - <%= bookmark.comment %>
        <%= link_to "Delete", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No bookmarks available.</p>
<% end %>

<%= link_to "Back to Lists", lists_path %>
<%= link_to "Create a New Bookmark", new_list_bookmark_path(@list), class: "btn btn-primary" %>
